SELECT codigo_venta_producto, descripcion_producto, base_imponible*impuesto_producto/100 AS impuesto, 
cantidad_producto, precio_venta_publico
FROM spve.producto INNER JOIN spve.venta_producto 
ON producto.id_producto = venta_producto.id_producto 
INNER JOIN spve.venta ON venta.id_venta = venta_producto.id_venta
WHERE venta_producto.id_venta = 1

