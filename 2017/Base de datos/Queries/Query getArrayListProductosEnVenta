SELECT codigo_venta_producto, descripcion_producto, cantidad_producto,
(CASE
    WHEN producto_exento = 1 THEN precio_venta_publico
    ELSE base_imponible
END) AS precio_base_unitario, 
(CASE
    WHEN producto_exento = 1 THEN 0
    ELSE impuesto_producto
END) AS impuesto_producto, (base_imponible + impuesto_producto) AS total_unitario, precio_venta_publico FROM spve.producto AS p
LEFT JOIN spve.precio_producto AS pp ON p.id_producto = pp.id_producto
LEFT JOIN spve.venta_producto AS vp ON vp.id_producto = p.id_producto 
WHERE id_venta = 13;