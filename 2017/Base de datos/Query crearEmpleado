SELECT persona.id_persona, persona.nombre_persona, persona.apellido_persona AS persona, empleado.id_empleado AS empleado FROM spve.empleado LEFT JOIN spve.persona ON persona.id_persona = empleado.id_empleado--; SELECT cargo.id_cargo, cargo.nombre_cargo AS cargo FROM spve.cargo RIGHT JOIN spve.empleado ON empleado.id_empleado = cargo.id_cargo