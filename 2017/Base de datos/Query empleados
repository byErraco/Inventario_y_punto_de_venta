SELECT persona.nombre_persona, empleado.id_empleado, cargo.nombre_cargo FROM spve.persona INNER JOIN spve.empleado ON persona.id_persona = empleado.id_persona INNER JOIN spve.cargo ON empleado.id_cargo = cargo.id_cargo